<% content_for :navbub do %>

<h2>Karte</h2>

<div id="map"></div>

<script src="http://openlayers.org/api/OpenLayers.js"></script>
<script defer="defer" type="text/javascript">
 var map = new OpenLayers.Map('map');
 var lay_osm = new OpenLayers.Layer.OSM();
 map.addLayer(lay_osm);

 var map_center = new OpenLayers.LonLat(54.41853, 27.94849).transform(
  new OpenLayers.Projection('EPSG:4326'), // WGS 1984
  map.getProjectionObject() // Spherical Mercator Projection
 );
 var map_zoom = 2;
 map.setCenter(map_center, map_zoom);
</script>

<% end %>
